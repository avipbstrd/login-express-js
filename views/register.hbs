<div class="row justify-content-md-center" style="background: rgb(40,64,212);
background: linear-gradient(90deg, rgba(40,64,212,1) 24%, rgba(114,107,214,1) 65%);">
    <div class="container py-3 h-100">
        <div class="container py-4 h-100">
            <div class="row d-flex justify-content-center h-100">
                <div class="col-12 col-md-6 col-md-2 col-xl-4">
                    <div class="card bg-dark text-white" style="border-radius: 2rem;">
                        <div class="card-body p-4 ">
                            <div class="mb-md-5 mt-md-3 pb-2">
                                <form method="POST" action="/register">
                                    <br class="form-group">
                                    {{#if message}}
                                    <div class="alert {{messageClass}}" role="alert">
                                        {{message}}
                                    </div>
                                    {{/if}}
                                    <h2 class="fw-bold mb-2 text-uppercase text-center">Daftar</h2>
                                    <div class="form-group">
                                        <label class="form-label" for="firstNameInput">Nama Awal</label>
                                        <input name="firstName" type="text" id="firstNameInput"
                                            class="form-control form-control-sm" / required>
                                    </div>
                                    <div class="form-group">
                                        <label class="form-label" for="lastNameInput">Nama belakang</label>
                                        <input name="firstName" type="text" id="lastNameInput"
                                            class="form-control form-control-sm" / required>
                                    </div>
                                    <div class="form-group">
                                        <label class="form-label" for="emailInput">Alamat Email</label>
                                        <input name="email" type="email" id="emailInput"
                                            class="form-control form-control-sm" / required>
                                    </div>
                                    <div class="form-group">
                                        <label class="form-label" for="passwordInput">Password</label>
                                        <input name="password" type="password" id="passwordInput"
                                            class="form-control form-control-sm" / required>
                                    </div>
                                    <div class="form-group">
                                        <label class="form-label" for="confirmPasswordInput">Confirm Password</label>
                                        <input name="confirmPassword" type="password" id="confirmPasswordInput"
                                            class="form-control form-control-sm" / required>
                                    </div>
                                    <br />
                                    <div class="text-center">
                                        <button type="submit" class="btn btn-outline-light btn-sm px-5 ">Daftar</button>
                                        <br />
                                        <p class="mb-0">sudah punya akun...? <a href="/login"
                                                class="text-white-50 fw-bold ">login</a>
                                    </div>

                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>